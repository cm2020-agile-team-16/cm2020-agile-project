<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- TAB TITLE -->
    <title>Dashboard - <%= app_name %></title>
    <!-- LINK TO STYLESHEETS / GOOGLE FONTS -->
    <link rel="stylesheet" href="/styles/general.css">
    <link rel="stylesheet" href="/styles/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins" rel="stylesheet">
</head>

<body>
    <!-- HEADER -->
    <header>
        <!-- HEADER: Welcome -->
        <section class="welcome container">
            <h2>Welcome back, <%= firstName %></h2>
        </section>

        <!-- HEADER: Title -->
        <section class="intro container">
            <h1>My Dashboard</h1>
            <a href="/account/profile"><img src="/assets/images/pfp.png" alt="profile picture"></a>
        </section>

        <!-- HEADER: Links to Webpages (DESKTOP ONLY) -->
        <section class="desktop links container">
            <nav>
                <ul>
                    <li><a href="/user/income">My Income</a></li>
                    <li><a href="/user/expense">My Expenses</a></li>
                    <li><a href="/user/summary">Summary</a></li>
                    <li><a href="/account/logout">Log Out</a></li>
                </ul>
            </nav>
        </div>
    </header>
    
    <!-- MAIN -->
    <main>
        <!-- MAIN: Balance Card -->
        <section class="balance container">
            <p>Balance: $<%= balance.toFixed(2) %></p>
            <p>Total Income: $<%= totalIncome %></p>
            <p>Total Expenses: $<%= totalExpenses %></p>
        </section>

        <!-- MAIN: Budgets -->
        <section class="budgets container">
            <h2>Budgets</h2>
            <p>Budgeted Income: $<%= budgetedIncome %></p>
            <p>Actual Income: $<%= totalIncome %></p>
            <p>Budgeted Expenses: $<%= budgetedExpenses %></p>
            <p>Actual Expenses: $<%= totalExpenses %></p>
        </section>

        <!-- MAIN: Recent Transactions -->
        <section class="transactions container">
            <h2>Recent Transactions</h2>
            <ul>
                <% recentTransactions.forEach(function(transaction) { %>
                    <li>
                        <i class="fa <%= transaction.icon %>"></i>
                        <span><%= transaction.source %></span>
                        <span><%= transaction.category %></span>
                        <span class="amount <%= transaction.type === 'income' ? 'amount-income' : 'amount-expense' %>">
                          <%= transaction.type === 'income' ? '+' : '-' %>$<%= transaction.amount %>
                        </span>
                        <span><%= new Date(transaction.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></span>
                      </li>
                <% }) %>
            </ul>
        </section>
    </main>

    <!-- FOOTER -->
    <footer>
        <!-- FOOTER: Links to Webpages (MOBILE ONLY) -->
        <div class="mobile links container">
            <nav>
                <ul>
                    <li><a href="/user/income">My Income</a></li>
                    <li><a href="/user/expense">My Expenses</a></li>
                    <li><a href="/user/summary">Summary</a></li>
                </ul>
            </nav>
        </div>

        <!-- FOOTER: About -->
        <div class="about container">
            <p>CM2020 Agile Software Projects: <%= app_name %></p>
        </div>
    </footer>
</body>
</html>