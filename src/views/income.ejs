<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Income - <%= app_name %></title>
    <link rel="stylesheet" href="/styles/general.css">
    <link rel="stylesheet" href="/styles/income.css">
</head>
<body>
    <!-- HEADER -->
    <header>
        <div class="container">
            <a href="/" class="logo">
                <h1><%= app_name %></h1>
            </a>
            <nav>
                <ul>
                    <li><a href="/user/dashboard">My Dashboard</a></li>
                    <li><a href="/user/summary">Summary</a></li>
                    <li><a href="/user/settings">Settings</a></li>
                </ul>
            </nav>
        </div>
    </header>
    
    <!-- MAIN -->
    <main class="container">
        <h1>Edit Income</h1>
        <% incomes.forEach(function(income) { %>
            <form action="/user/income" method="POST">
                <input type="hidden" name="id" value="<%= income.income_id %>">
                
                <label for="category-<%= income.income_id %>">Category:</label>
                <select id="category-<%= income.income_id %>" name="category_id" required>
                    <% categories.forEach(function(category) { %>
                        <option value="<%= category.category_id %>" <%= category.category_id === income.category_id ? 'selected' : '' %>><%= category.name %></option>
                    <% }) %>
                </select>
                
                <label for="source-<%= income.income_id %>">Source:</label>
                <input type="text" id="source-<%= income.income_id %>" name="source" value="<%= income.source %>" required>
                
                <label for="amount-<%= income.income_id %>">Amount:</label>
                <input type="number" id="amount-<%= income.income_id %>" name="amount" value="<%= income.amount %>" required>
                
                <button type="submit">Save Changes</button>
            </form>
            <hr>
        <% }) %>
        <button id="addNewButton">Add New</button>
    </main>
</body>
</html>