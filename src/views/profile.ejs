<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- TAB TITLE -->
    <title>Profile - <%= app_name %></title>
    <!-- LINK TO STYLESHEETS / GOOGLE FONTS -->
    <link rel="stylesheet" href="/styles/profile.css">
    <link rel="stylesheet" href="/styles/icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins" rel="stylesheet">
</head>

<body>
    <header>
        <a id="back-btn" href="/user/dashboard" alt="back button">
            <span class="icon">arrow_back</span>
        </a>
        <span id="title-name"><%= firstName %> <%= lastName %></span>
        <img id="profile-picture" src="/assets/images/pfp.png" alt="profile picture">
    </header>
    <main>
        <section id="flex">
            <div id="profile-view-mode" class="content">
                <div class="field">
                    <span class="icon">person</span>
                    <span><%= firstName %></span>
                </div>
                <div class="field">
                    <span class="icon">person</span>
                    <span><%= lastName %></span>
                </div>
                <div class="field">
                    <span class="icon">mail</span>
                    <span><%= email %></span>
                </div>
                <div class="field" id="reset-password-btn">
                    <span class="icon">password</span>
                    <span>Reset Password</span>
                </div>
                <div class="field">
                    <div id="edit-profile-btn" class="btn">
                        Edit Profile
                    </div>
                </div>
            </div>
            <form id="profile-edit-mode" class="content" action="/account/profile/edit" method="POST" style="display:none;">
                <div class="field">
                    <label for="first_name">First Name:</label>
                    <input type="text" id="profile-first-name" name="firstName" value="<%= firstName %>">
                </div>
                <div class="field">
                    <label for="last_name">Last Name:</label>
                    <input type="text" id="profile-last-name" name="lastName" value="<%= lastName %>">
                </div>
                <div class="field">
                    <label for="email">Email:</label>
                    <input type="email" id="profile-email" name="email" value="<%= email %>">
                </div>
                <div class="field">
                    <button type="submit" class="btn">Save Changes</button>
                    <button type="button" class="btn" id="cancel-edit-btn">Cancel</button>
                </div>
            </form>
            <form id="reset-password-mode" class="content" action="/account/profile/resetPassword" method="POST" style="display:none;">
                <div class="field">
                    <label for="current_password">Current Password:</label>
                    <input type="password" id="current-password" name="currentPassword" required>
                </div>
                <div class="field">
                    <label for="new_password">New Password:</label>
                    <input type="password" id="new-password" name="newPassword" required>
                </div>
                <div class="field">
                    <label for="confirm_password">Confirm New Password:</label>
                    <input type="password" id="confirm-password" name="confirmPassword" required>
                </div>
                <div class="field">
                    <button type="submit" class="btn">Reset Password</button>
                    <button type="button" class="btn" id="cancel-reset-btn">Cancel</button>
                </div>
            </form>
            <div id="profile-message">
                <% if (typeof message !== 'undefined') { %>
                    <div class="message <%= messageClass %>"><%= message %></div>
                <% } %>
            </div>
        </section>
    </main>
    <footer>
        <div class="about container">
            <p>CM2020 Agile Software Projects: <%= app_name %></p>
        </div>
    </footer>
    <script src="/scripts/toggleProfileModes.js"></script>
</body>
</html>