<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- TAB TITLE -->
    <title>Summary - <%= app_name %></title>
    <!-- LINK TO STYLESHEETS / GOOGLE FONTS -->
    <link rel="stylesheet" href="/styles/common.css">
    <link rel="stylesheet" href="/styles/summary.css">
    <link rel="stylesheet" href="/styles/icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins" rel="stylesheet">
</head>

<body>
    <header>
        <div id="welcome">
            <span id="header-text">
                Summary
                <select name="sort-key" id="month-year-dropdown" class="dropdown" onchange="onChangeMonthYearDropdown(this)">
                </select>
            </span>
        </div>
        <div id="profile">
            <img id="profile-picture" src="/assets/images/pfp.png" onclick="window.location.href = '/account/profile/'" alt="profile picture">
            <a href="/account/logout">Sign Out</a>
        </div>
    </header>

    <main id="flex">

        <section id="balances-chart-section">
            <span class="section-title"></span>
            <canvas id="balances-chart" width="850" height="200"></canvas>
        </section>

        <section id="savings-rates-chart-section">
            <span class="section-title"></span>
            <canvas id="savings-rates-chart" width="850" height="200"></canvas>
        </section>

        <section id="financial-snapshot">
            <div>
                <span id="section-title"></span>
                <div id="income-hotspots">
                    <h4>Income Hotspots</h4>
                    <ul>
                    </ul>
                </div>
                <div id="expense-hotspots">
                    <h4>Expense Hotspots</h4>
                    <ul>
                    </ul>
                </div>
            </div>
        </section>

        <!-- Budget Performance Section -->
        <section id="budget-performance">
            <div>
                <span id="section-title"></span>
                <div id="income-budgets">
                    <h4>Income Budgets</h4>
                </div>
                <div id="expense-budgets">
                    <h4>Expense Budgets</h4>
                </div>
            </div>
        </section>

        <div id="navbar">
            <div class="navbar-button" onclick="document.onNavbarButtonClick(0)">
                <span class="icon">grid_view</span>
                <span>Dashboard</span>
            </div>
            <div class="navbar-button" onclick="document.onNavbarButtonClick(1)">
                <span class="icon">payments</span>
                <span>My Income</span>
            </div>
            <div class="navbar-button" onclick="document.onNavbarButtonClick(2)">
                <span class="icon">trending_down</span>
                <span>My Expenses</span>
            </div>
            <div class="navbar-button selected" onclick="document.onNavbarButtonClick(3)">
                <span class="icon">data_usage</span>
                <span>Summary</span>
            </div>
        </div>
    </main>
    
    <footer>
        <div class="about container">
            <p>CM2020 Agile Software Projects: <%= app_name %></p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script type="module">
        import {
            onChangeMonthYearDropdown,
        } from '../scripts/summaryPage.js';
        window.onChangeMonthYearDropdown = onChangeMonthYearDropdown;
    </script>
    <script src="/scripts/navbar.js"></script>

</body>
</html>